@using YemekDemeti_4.Data
@model Restaurant
@{
    ViewBag.Title = "AdminEdit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var semtListesi = ((List<SelectListItem>)ViewBag.Semtler);
}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
        </div>
        <div class="col-md-5 border-right">

            @using (Html.BeginForm("AdminEdit", "Restaurant", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary()
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Restoran Bilgileri</h4>
                    </div>

                    <div class="row mt-2">
                        <div class="col-md-6">

                            <label class="labels">Resim Seç</label>
                            <input type="file" name="Resim Ekle" value="Resim Ekle" />

                            <label class="labels">Restoran İsmi</label>
                            @Html.HiddenFor(x=> x.Score, new { @Value = ViewBag.RestoranPuanı })
                            @Html.HiddenFor(x => x.ID, new { @Value = ViewBag.RestoranID })
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })


                            <label class="labels">Admin İsmi</label>
                            @Html.TextBoxFor(x => x.AdminName, new { @class = "form-control" })

                            <label class="labels">Şifre</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })

                            <label class="labels">Hizmet Bölgesi</label>
                            @Html.DropDownListFor(x => x.DistrictID, ((List<SelectListItem>)ViewBag.Semtler), new { @class = "btn btn-outline-primary dropdown-toggle" })

                        </div>
                    </div>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit">Kaydet</button></div>
                </div>
            }

        </div>
    </div>
</div>
