@using YemekDemeti_4.Data
@model Comment
@{
    ViewBag.Title = "RateAndComment";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Order siparis = ViewBag.Siparis;
    YemekDemeti_4DbEntities6 _dbContext = new YemekDemeti_4DbEntities6();

    var restoran = _dbContext.Restaurants.FirstOrDefault(x => x.ID == siparis.RestaurantID);
    string restoranResim = restoran.Image;

}


<link href="~/Content/ProfilePageStyleSheet.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>



<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-12 border-right">
            <ul class="friend-list clearfix">
                    <li>
                        <a href="/Account/OrderDeatils/@(siparis.ID)">

                            @if (restoranResim == null)
                            {
                                <div class="friend-img"><img src="https://pbs.twimg.com/profile_images/1012335444732858368/5UW5rP9L_400x400.jpg" alt="" /></div>
                            }
                            else
                            {
                                <div class="friend-img"><img src="@Url.Content(restoranResim)" alt="" /></div>
                            }

                            <div class="friend-info">
                                <h4>@(siparis.RestaurantName)</h4>
                                <p>@(siparis.OrderTime)</p>
                            </div>
                        </a>
                    </li>
            </ul>
        </div>
        <div class="col-md-12 border-right">


            @using (Html.BeginForm("RateAndComment", "Account"))
            {
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Yorum</h4>
                    </div>

                    <div class="row mt-3">

                        <div class="col-md-12">
                            @Html.HiddenFor(x => x.OrderID, new { @Value = siparis.ID })
                            @Html.HiddenFor(x => x.RestaurantID, new { @Value = siparis.RestaurantID })
                            @Html.TextAreaFor(x => x.C_Comment, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="mt-5 text-left">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <button class="btn btn-warning" type="submit" name="submit" id="submit" value="1"> <i class="fa fa-star"></i></button>
                            </li>
                            <li class="list-group-item">
                                <button class="btn btn-warning" type="submit" name="submit" id="submit" value="2"> <i class="fa fa-star"></i><i class="fa fa-star"></i></button>
                            </li>
                            <li class="list-group-item">
                                <button class="btn btn-warning" type="submit" name="submit" id="submit" value="3"> <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></button>
                            </li>
                            <li class="list-group-item">
                                <button class="btn btn-warning" type="submit" name="submit" id="submit" value="4"> <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></button>
                            </li>
                            <li class="list-group-item">
                                <button class="btn btn-warning" type="submit" name="submit" id="submit" value="5"> <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></button>
                            </li>
                        </ul>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

